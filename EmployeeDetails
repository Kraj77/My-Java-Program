public class Employee {
    String name;
    String job_title;
    double salary;

    public Employee(String name,String job_title,double salary){
        this.name=name;
        this.job_title = job_title;
        this.salary=salary;
    }
    public double getSalary(){
        return salary;
    }
    public void increaseSalary(double percentage){
        salary= salary+salary*percentage/100;
    }
    public void details(){
        System.out.println("The name of employee is "+name);
        System.out.println("The Position of employee is "+job_title);
        System.out.println("The salary of employee is "+salary);
    }

}
--------------------------------------------
class demo{
    public static void main(String []args){
        Employee emp1 = new Employee("Michael","Associate",40567);
        Employee emp2= new Employee("john","Analyst",55000);

        emp1.increaseSalary(25);
        emp1.details();
        emp2.details();

    }
}
